<div class="page-header">
  <h3>Vote #<%= @vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @vote.user.present? %>
          <a href="/users/<%= @vote.user_id %>">
            <%= @vote.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Photo</dt>
      <dd>
        <% if @vote.photo.present? %>
          <a href="/photos/<%= @vote.photo_id %>">
            <%= @vote.photo.caption %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/votes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @vote.user %>
        <a href="/votes/<%= @vote.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_vote/<%= @vote.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
